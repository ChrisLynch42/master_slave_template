<h1>Listing skills</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.title %></td>
    <td><%= link_to 'Show', skill, :class => 'ajaxSkillLink'  %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill), :class => 'ajaxSkillLink' %></td>
    <td><%= link_to 'Destroy', skill_path(skill,:character_id => skill.character_id), :class => 'ajaxSkillDeleteLink' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Skill', new_skill_path(:character_id => params[:character_id]), :class => 'ajaxSkillLink' %>
<%= render '/layouts/ajaxify_links' %>
